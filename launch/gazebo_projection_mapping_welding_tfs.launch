	<arg name="static_projector_pose" default="true" />
	<arg name="static_beam_pose" default="true" />
	<arg name="static_beam_pose_offset" default="true" />
	<arg name="static_middle_weld" default="false" />



	<!-- ============================================================================================================================================================================================================ -->
