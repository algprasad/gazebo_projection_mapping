		<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_projector_calib" 		args="-0.15823644233515554 -0.50285622259737767 1.8018635479963521 -0.13829219617174357 -0.3023476403963809 -0.9427100988184416 0.027547094409813483 projector_link_calib camera_link_calib 10" 	if="$(arg static_projector_pose)" />

		<!-- fix projector axis -->
		<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_projector_axis" 			args="0 0 0 1.57079632679 -1.57079632679 0 projector_link_calib projector_link_fixed_axis 10" 						if="$(arg static_projector_pose)" />

		<!-- manual correction | mrpt -->
