	</group>
	<!-- ============================================================================================================================================================================================================ -->



	<!-- scene objects -->
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_beam_offset" 		args="0 0 0 0 0 0 map beam_link_offset 10" 																		if="$(arg static_beam_pose_offset)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_beam" 				args="0 0 0 0 0 0 beam_link_offset beam_link_base 10" 															if="$(arg static_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_beam_base" 			args="0 0.008 0.167 0 0 0 beam_link_base beam_link 10" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_begin" 			args="0.001 0 0 0 0 0 beam_link beam_weld_begin_link 10" 														if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_end" 			args="0.286 0 0 0 0 0 beam_link beam_weld_end_link 10" 															if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_middle_begin" 	args="0.142 0 0 0 0 0 beam_link beam_weld_middle_begin_link 10" 												if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_middle_end" 	args="0.155 0 0 0 0 0 beam_link beam_weld_middle_end_link 10" 													if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_rectangle" 		args="0.135 0.1601 -0.136 0 0 1.57079632679 beam_link beam_weld_rectangle_link 10" 								if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_rectangle_top" 	args="10 0.1601 0 0 1.57079632679 1.57079632679 beam_link beam_weld_rectangle_top_link 10" 						if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_u" 				args="-0.058 -0.055 -0.167 -0.05 0 0 beam_link beam_weld_u_link 10" 											if="$(arg attach_welds_to_beam_pose)" />
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_beam_weld_l" 				args="-0.02 0.15 -0.167 0 0 0 beam_link beam_weld_l_link 10" 													if="$(arg attach_welds_to_beam_pose)" />
	
	<node pkg="tf" type="static_transform_publisher" name="static_transform_publisher_board" 					args="0.153675 0.10245 -0.015 0 0 0 map calibration_pattern_link 10" 													if="$(arg attach_welds_to_beam_pose)" />
</launch>
